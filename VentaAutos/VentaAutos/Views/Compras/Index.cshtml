@model IEnumerable<VentaAutos.Models.TCompra>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="row">
    <div class="col-lg-5 col-lg-offset-8">
        <input type="search" id="search" value="" class="form-control" placeholder="Búsqueda">
    </div>
</div>
<div class="row">
    <table class="table">
        <thead>
            <tr>

                <th>
                    @Html.DisplayNameFor(model => model.TCliente.Identificacion)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.TCliente.Nombre)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.TVehiculo.CMarcaVehiculo.Descripcion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TVehiculo.Estilo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Monto)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Fecha)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.TCliente.Identificacion)
                    </td>

                    <td>
                        @* @Html.DisplayFor(modelItem => item.TCliente.Nombre + " " + item.TCliente.PrimerApellido + " " + item.TCliente.SegundoApellido)*@
                        @( String.Format("{0} {1} {2}", item.TCliente.Nombre, item.TCliente.PrimerApellido, item.TCliente.SegundoApellido) )
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.TVehiculo.CMarcaVehiculo.Descripcion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TVehiculo.Estilo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Monto)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Fecha)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { idCliente = item.IdCliente, placa = item.Placa }) |
                        @Html.ActionLink("Details", "Details", new { idCliente = item.IdCliente, placa = item.Placa }) |
                        @Html.ActionLink("Delete", "Delete", new { idCliente = item.IdCliente, placa = item.Placa })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="//rawgithub.com/stidges/jquery-searchable/master/dist/jquery.searchable-1.0.0.min.js"></script>
    <script src="~/Scripts/table-search.js"></script>
}
