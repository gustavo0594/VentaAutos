            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CTipoArticulo.Descripcion)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.CTransmision.Descripcion)
            </td>

            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Placa }) |
