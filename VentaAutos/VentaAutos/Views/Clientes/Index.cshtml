@model IEnumerable<VentaAutos.Models.TCliente>

@{
    ViewBag.Title = "Clientes";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Nuevo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Identificacion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PrimerApellido)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SegundoApellido)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.Direccion)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.Correo)
        </th>
        <th>
          @*  @Html.DisplayNameFor(model => model.TTelefonoCliente)*@
            Num. Teléfonos
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    var tels = item.TTelefonoCliente.Count.ToString();
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Identificacion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PrimerApellido)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SegundoApellido)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.Direccion)
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.Correo)
        </td>
        
        <td>
            
           @* @Html.DisplayFor(modelItem => item.TTelefonoCliente.Count)*@
            @Html.ActionLink(tels, "Index", "TelefonosCliente", new { idCliente = item.IdCliente }, new { idCliente = item.IdCliente })
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.IdCliente }) |
            @Html.ActionLink("Detalle", "Details", new { id=item.IdCliente }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.IdCliente }) |
            @Html.ActionLink("Agregar Teléfono", "Create", "TelefonosCliente", new { idCliente = item.IdCliente }, new { idCliente = item.IdCliente })
        </td>
    </tr>
}

</table>
